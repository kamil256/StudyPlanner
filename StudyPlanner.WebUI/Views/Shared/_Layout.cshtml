<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudyPlanner - @ViewBag.Title</title>
    <link href="~/Content/CSS/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style type="text/css">
        /*body {
            padding-top: 50px;
        }*/

        .navbar {
            border-color: #922710;
            border-width: 0;
            border-radius: 0;
            margin-bottom: 0;
        }
        .navbar-default {
            background-color: #C53515;
        }
        .navbar-default .navbar-nav > li > a, .navbar-default .navbar-nav > li {
            color: #eee;
            font-weight: bold;
        }
        .navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:focus, .navbar-default .navbar-nav > .active > a:hover {
            background-color: #922710;
            color: white;
        }
        .navbar-default .navbar-nav > li > span {
            padding: 15px;
        }
        .navbar-default .navbar-nav > li > a:hover {
            color: white;
        }
        .MainImageContainer {
            position: relative;
        }
        .MainImageContainer > img {
            width: 100%;
        }
        .MainImageContainer > div {
            position: absolute;
            right: 20px;
            top: 20px;
            background-color: white;
            padding: 15px;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.8);
            box-shadow: white 0 0 3px;
        }
        .MainImageContainer > div input.form-control {
            width: 300px;
        }
        .MainImageContainer > div input[type="submit"] {
            margin-bottom: 7px;
        }
        .SectionsDescription {
            margin: 0 !important;
            background-color: #C7B299;
        }
        .SectionsDescription > div {
            padding: 70px;
            font: 1em Verdana;
            text-align: justify;
        }
        .SectionsDescription > div > img, .SectionsDescription > div > b, .SectionsDescription > div > a {
            display: block;
        }
        .SectionsDescription > div > b {
            margin-top: 10px; 
            margin-bottom: 10px;
        }
        .SectionsDescription > div > a {
            text-decoration: none;
            font-weight: bold;
            color: #333;
            margin-top: 5px;
        }
        footer {
            background-color: #C53515;
            padding: 15px;
            color: #eee;
            font-weight: bold;
        }
        .SuccessMessage {
            color: green;
        }
        .ErrorMessage {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default @*navbar-fixed-top*@">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">StudyPlanner</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class='@(ViewBag.Title == "Home" ? "active" : "")'>@Html.ActionLink("HOME", "Index", "Home")</li>
                    <li class='@(ViewBag.Title == "Books" ? "active" : "")'>@Html.ActionLink("BOOKS", "Books", "Home")</li>
                    <li class='@(ViewBag.Title == "Sections" ? "active" : "")'>@Html.ActionLink("SECTIONS", "Sections", "Home")</li>
                    <li class='@(ViewBag.Title == "Trainings" ? "active" : "")'>@Html.ActionLink("TRAININGS", "Trainings", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("LogOut")"><span class="glyphicon glyphicon-user"></span> LOG OUT (@User.Identity.Name)</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
