<p><b>Are you sure you want to remove book <span id="remove-book-title" style="color: cornflowerblue"></span>?</b></p>

<p>This will remove book with all its sections and trainings.</p>

@using (Html.BeginForm("RemoveBook", "Books"))
{
    <input type="hidden" name="bookId" id="remove-book-id" />
    <input type="submit" value="Yes" class="btn btn-default"/>
    <input type="button" autofocus="autofocus" value="No" class="btn btn-default" onclick="$('#remove-book-dialog').dialog('close')" />
}
