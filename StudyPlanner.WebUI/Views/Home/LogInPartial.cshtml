@model StudyPlanner.Domain.Entities.User

<div>
    <p>@TempData["Message"]</p>
    @using (@Html.BeginForm("LogIn", "Home", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-default" value="Log in" />
    }
    @Html.ActionLink("Register", "Index", new { register = true, returnUrl = ViewBag.ReturnUrl }) | @Html.ActionLink("Recover password", "Index", new { recoverPassword = true, returnUrl = ViewBag.ReturnUrl })
</div>
