@model StudyPlanner.Domain.Entities.User

<div>
    <p>@TempData["Message"]</p>
    @using (@Html.BeginForm("LogIn", "Home", new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        <div class="form-group">
            @Html.Label("Email", "E-mail")
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @*<input class="form-control" name="email" value="@Model.Email" />*@
        </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                @*<label>Password</label>
                <input type="password" class="form-control" name="password" />*@
            </div>
            <input type="submit" class="btn btn-default" value="Log in" />
    }
    <a href="@Url.Action("Index", "Home", new { Register = true, ReturnUrl = ViewBag.ReturnUrl })">Register</a> | <a>Forgot password</a>
</div>
